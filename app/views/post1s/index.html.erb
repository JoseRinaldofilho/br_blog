<p id="notice"><%= notice %></p>

<h1>Poste do José </h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post1s.each do |post1| %>
      <tr>
        <td><%= post1.titulo %></td>
        <td><%= post1.descricao %></td>
        <td><%= link_to 'Mostra', post1 %></td>
        <td><%= link_to 'Edita', edit_post1_path(post1) %></td>
        <td><%= link_to 'Deletar', post1, method: :delete, data: { confirm: 'Deseja Deletar ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Post', new_post1_path %>
